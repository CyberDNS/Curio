# Database Configuration
POSTGRES_USER=curio
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=curio

# LLM Configuration (Required)
OPENAI_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-4-turbo-preview

# Application Security
SECRET_KEY=change-this-to-a-random-secret-key

# Application Settings
DEBUG=false
RSS_FETCH_INTERVAL=60

# Network Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
CORS_ORIGINS=http://localhost:3000

# API URL for Frontend
REACT_APP_API_URL=http://localhost:8000

# OAuth2 / OpenID Connect (e.g., Pocket ID)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_SERVER_METADATA_URL=https://your-pocket-id-server.com/.well-known/openid-configuration
OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/callback

# Cookie Security (set to false for local development without HTTPS)
COOKIE_SECURE=false
